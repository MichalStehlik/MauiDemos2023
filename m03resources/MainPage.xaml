<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             x:Class="m03resources.MainPage">
    <ContentPage.Resources>
        <Color x:Key="SectionsColor">#444444</Color>
        <Color x:Key="LightFont">#d6d6d6</Color>
        <Color x:Key="DarkFont">#4fd8eb</Color>
        <sys:String x:Key="TextContent">Ahoj, světe</sys:String>
    </ContentPage.Resources>
    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">
            <Label 
                Text="{StaticResource TextContent}" 
                FontFamily="CCR"
                FontSize="Header"
                TextColor="{StaticResource DarkFont}"
                />
            <Image HeightRequest="100">
                <Image.Source>
                    <FontImageSource
                    FontFamily="Icons"
                    Color="Black"
                    Glyph="&#xe911;"
                    Size="100" />
                </Image.Source>
            </Image>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
