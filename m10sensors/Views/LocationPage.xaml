<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="m10sensors.Views.LocationPage"
             xmlns:vm="clr-namespace:m10sensors.ViewModels"
             Title="Umístění">
    <ContentPage.BindingContext>
        <vm:LocationViewModel />
    </ContentPage.BindingContext>
    <VerticalStackLayout>
        <Label 
            Text="{Binding Status}"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Label 
            Text="{Binding Latitude}"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Label 
            Text="{Binding Longitude}"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Label 
            Text="{Binding Altitude}"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Button Text="Cache" Command="{Binding ReadCachedCommand}"/>
        <Button Text="GPS" Command="{Binding ReadCachedCommand}"/>
    </VerticalStackLayout>
</ContentPage>