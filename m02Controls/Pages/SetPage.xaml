<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="m02Controls.Pages.SetPage"
             Title="SetPage">
    <VerticalStackLayout>
        <CheckBox IsChecked="False" x:Name="setCheck" 
                  CheckedChanged="setCheck_CheckedChanged"/>
        <Slider 
            Minimum="0"
            Maximum="100"
            MinimumTrackColor="Red"
            MaximumTrackColor="Green"
            ThumbColor="Yellow"
            Value="20"
            ValueChanged="Slider_ValueChanged"
            x:Name="SetSlider"
            />
        <Label x:Name="SetLabel" />
        <Stepper Increment="1" Maximum="100" Minimum="0" Value="20" />
        <Switch IsToggled="True" />
        <DatePicker Date="2022-02-03" />
        <TimePicker />
    </VerticalStackLayout>
</ContentPage>